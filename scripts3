CREATE ROLE usr_ler LOGIN PASSWORD 'Iagopasso2';

usr_gravar 
senha: 'Iagopasso1'

usr_ler
senha: 'Iagopasso2'

## PERMISSOES

GRANT INSERT ON ALL TABLES IN SCHEMA cadastro TO usr_gravar;
GRANT INSERT ON ALL TABLES IN SCHEMA operacao TO usr_gravar;

